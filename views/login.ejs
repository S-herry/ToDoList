<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TodoList</title>
    <%- include('link/head.ejs') %>
  </head>
  <body
    class="max-w-3xl min-h-screen flex flex-col items-center justify-center mx-auto"
  >
    <h1 class="text-7xl text-center font-bold py-8">Login</h1>
    <form id="login" class="flex flex-col gap-4">
      <div class="text-xl">
        <label for="email">帳號</label>
        <input type="email" name="email" class="border rounded-sm" required />
      </div>
      <div class="text-xl">
        <label for="password">密碼</label>
        <input
          type="password"
          name="password"
          class="border rounded-sm"
          required
        />
      </div>
      <button type="submit" class="border rounded-sm cursor-pointer">
        登入
      </button>
      <button
        id="toRegister"
        type="button"
        class="border rounded-sm cursor-pointer"
      >
        註冊
      </button>
      <span
        class="text-center bg-red-500 text-white rounded-sm"
        id="errorMessage"
      ></span>
    </form>

    <%- include('link/script.ejs') %>
    <script>
      function fetchData() {
        const token = localStorage.getItem("token");
        $.ajax({
          url: "/verify-token",
          type: "GET",
          headers: {
            Authorization: token,
          },
          success: function (response) {
            window.location.href = "/";
          },
        });
      }
      fetchData();
    </script>
  </body>
</html>
